@page
@model AppDev2Project.Pages.Teacher.CreateExamModel
@{
    ViewData["Title"] = "Create Exam";
}

<h2 class="text-2xl font-bold mb-4">Create Exam</h2>

<form method="post" class="space-y-4">
    <div>
        <label asp-for="Exam.Title" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Exam.Title" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Exam.Title" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Exam.Description" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Exam.Description" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Exam.Description" class="text-red-500 text-sm"> hi</span>
    </div>
    <div>
        <label asp-for="Exam.Subject" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Exam.Subject" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Exam.Subject" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Exam.TeacherId" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Exam.TeacherId" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Exam.TeacherId" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <input type="submit" value="Create" class="bg-blue-500 text-white py-2 px-4 rounded" />
    </div>
</form>

<a href="/Teacher/ManageExams" class="mt-4 inline-block bg-gray-500 text-white py-2 px-4 rounded">Back to Manage Exams</a>
