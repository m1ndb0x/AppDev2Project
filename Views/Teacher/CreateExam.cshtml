@model AppDev2Project.Models.Exam
@{
    ViewData["Title"] = "Create Exam";
}

<h2 class="text-2xl font-bold mb-4">Create Exam</h2>

<form asp-controller="Teacher" asp-action="CreateExam" method="post" class="space-y-4">
    <div>
        <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Title" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
        <textarea asp-for="Description" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm"></textarea>
        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Subject" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Subject" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Subject" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="TeacherId" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="TeacherId" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="TeacherId" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <input type="submit" value="Create" class="bg-blue-500 text-white py-2 px-4 rounded" />
    </div>
</form>

<a asp-controller="Teacher" asp-action="ManageExams" class="mt-4 inline-block bg-gray-500 text-white py-2 px-4 rounded">Back to Manage Exams</a>
