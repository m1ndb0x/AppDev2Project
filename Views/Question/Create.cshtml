@model AppDev2Project.Models.Question

@{
    ViewData["Title"] = "Create Question";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden p-6 max-w-3xl mx-auto">
        <h2 class="text-2xl font-bold mb-6">Add New Question</h2>
        <p class="text-gray-600 mb-6">Fill in the details below to create a new question. Required fields are marked with *</p>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="ExamId" />

            <div class="mb-6">
                <label asp-for="QuestionText" class="block text-gray-700 font-semibold mb-2">
                    Question Text <span class="text-red-500">*</span>
                </label>
                <textarea asp-for="QuestionText" 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    rows="3" 
                    placeholder="Enter your question here..."
                    required></textarea>
                <span asp-validation-for="QuestionText" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-6">
                <label asp-for="QuestionType" class="block text-gray-700 font-semibold mb-2">
                    Question Type <span class="text-red-500">*</span>
                </label>
                <select asp-for="QuestionType" 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    id="questionType" 
                    required>
                    <option value="">-- Select Type --</option>
                    <option value="multiple_choice">Multiple Choice</option>
                    <option value="short_answer">Short Answer</option>
                </select>
                <p class="text-sm text-gray-500 mt-1">Choose 'Multiple Choice' for predefined options or 'Short Answer' for free-form responses</p>
            </div>

            <div id="choicesSection" class="mb-6 bg-gray-50 p-4 rounded-lg">
                <h3 class="font-semibold mb-3">Multiple Choice Options</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="ChoiceA" class="block text-gray-700 mb-1">Choice A</label>
                        <input asp-for="ChoiceA" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label asp-for="ChoiceB" class="block text-gray-700 mb-1">Choice B</label>
                        <input asp-for="ChoiceB" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label asp-for="ChoiceC" class="block text-gray-700 mb-1">Choice C</label>
                        <input asp-for="ChoiceC" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                    <div>
                        <label asp-for="ChoiceD" class="block text-gray-700 mb-1">Choice D</label>
                        <input asp-for="ChoiceD" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                </div>
            </div>

            <div class="mb-6">
                <label asp-for="CorrectAnswer" class="block text-gray-700 font-semibold mb-2">
                    Correct Answer <span class="text-red-500">*</span>
                </label>
                <input asp-for="CorrectAnswer" 
                    class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" 
                    required />
                <p class="text-sm text-gray-500 mt-1" id="correctAnswerHint"></p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                <div>
                    <label asp-for="ScoreWeight" class="block text-gray-700 font-semibold mb-2">
                        Score Weight <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="ScoreWeight" 
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        type="number" 
                        step="0.5" 
                        min="0"
                        required />
                    <p class="text-sm text-gray-500 mt-1">Points awarded for correct answer</p>
                </div>

                <div>
                    <label asp-for="Order" class="block text-gray-700 font-semibold mb-2">Question Order</label>
                    <input asp-for="Order" 
                        class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        type="number"
                        min="1" />
                    <p class="text-sm text-gray-500 mt-1">Optional: Set display order in exam</p>
                </div>
            </div>

            <div class="flex items-center justify-between mt-8">
                <button type="submit" 
                    class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Create Question
                </button>
                <a asp-controller="Exam" 
                   asp-action="Edit" 
                   asp-route-id="@Model.ExamId" 
                   class="text-gray-600 hover:text-gray-800">
                    Back to Exam
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            function toggleChoices() {
                const type = $('#questionType').val();
                if (type === 'multiple_choice') {
                    $('#choicesSection').slideDown();
                    $('#correctAnswerHint').text('Enter the letter of the correct answer (A, B, C, or D)');
                } else if (type === 'short_answer') {
                    $('#choicesSection').slideUp();
                    $('#correctAnswerHint').text('Enter the expected answer text');
                } else {
                    $('#choicesSection').hide();
                    $('#correctAnswerHint').text('');
                }
            }
            
            $('#questionType').change(toggleChoices);
            toggleChoices();
        });
    </script>
}