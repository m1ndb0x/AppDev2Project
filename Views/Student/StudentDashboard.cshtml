@model AppDev2Project.Models.StudentDashboard
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Show pfp and user name as welcome *@
<div class="flex items-center mb-6">
    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="w-16 h-16 rounded-full mr-4" />
    <h1 class="text-2xl font-bold">Welcome, @Model.Name</h1>
</div>

<h1 class="text-2xl font-bold mb-6 flex items-center">
    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-full h-12 w-12 mr-4" />
    Welcome to the Student Dashboard
</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @for (int i = 1; i <= 6; i++)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            <h2 class="text-lg font-semibold">Exam @i</h2>
            <p class="text-sm text-gray-600">Subject: Subject @i</p>
            <p class="text-sm text-gray-600">Total Marks: @((i % 2 == 0) ? 15 : 10)</p>
            <p class="text-sm text-gray-600">Completed: false</p>
            <p class="text-sm text-gray-600">Grade:</p>
        </div>
    }
</div>