@model AppDev2Project.Models.StudentDashboard
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold mb-6">Welcome to the Student Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @for (int i = 1; i <= 6; i++)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            <h2 class="text-lg font-semibold">Exam @i</h2>
            <p class="text-sm text-gray-600">Subject: Subject @i</p>
            <p class="text-sm text-gray-600">Total Marks: @((i % 2 == 0) ? 15 : 10)</p>
            <p class="text-sm text-gray-600">Completed: false</p>
            <p class="text-sm text-gray-600">Grade:</p>
        </div>
    }
</div>