<!DOCTYPE html>
<html lang="en">

<head>
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppDev2Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppDev2Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body style="background: linear-gradient(to right, #F88379, #FFB6C1);">
    <header>
        <nav class="bg-white shadow-lg py-2">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-teal-600">Examina</a>
                    </div>
                    
                    <div class="flex items-center space-x-4">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Teacher" asp-action="Dashboard" 
                               class="px-3 py-2 rounded-md text-base font-medium text-teal-600 hover:text-teal-700 hover:bg-teal-50">
                                Teacher Dashboard
                            </a>
                            <a asp-controller="Student" asp-action="StudentDashboard" 
                               class="px-3 py-2 rounded-md text-base font-medium text-teal-600 hover:text-teal-700 hover:bg-teal-50">
                                Student Dashboard
                            </a>
                            <a asp-controller="Account" asp-action="Logout" 
                               class="px-3 py-2 rounded-md text-base font-medium text-red-600 hover:text-red-700 hover:bg-red-50">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" 
                               class="px-3 py-2 rounded-md text-base font-medium text-teal-600 hover:text-teal-700 hover:bg-teal-50">
                                Login
                            </a>
                            <a asp-controller="Account" asp-action="Register" 
                               class="px-3 py-2 rounded-md text-base font-medium text-teal-600 hover:text-teal-700 hover:bg-teal-50">
                                Register
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container text-center py-3">
            &copy; 2024 Examina - Your Online Examination Platform
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>