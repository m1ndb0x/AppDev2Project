@model AppDev2Project.Models.Exam
@{
    ViewData["Title"] = "Take Exam";
    Layout = "_DashboardLayout";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
        <h1 class="text-3xl font-bold mb-4">@Model.Title</h1>
        <div class="mb-6">
            <p class="text-gray-600">@Model.Description</p>
            <div class="mt-4">
                <span class="font-bold">Subject:</span> @Model.Subject
                <span class="ml-4 font-bold">Total Score:</span> @Model.TotalScoreWeight
            </div>
        </div>

        <form asp-action="SubmitExam" method="post">
            <input type="hidden" name="ExamId" value="@Model.Id" />
            
            @foreach (var question in Model.Questions.OrderBy(q => q.Order))
            {
                <div class="mb-6 p-4 bg-gray-50 rounded-lg">
                    <div class="font-semibold mb-2">@question.QuestionText</div>
                    <input type="hidden" name="Questions[@question.Id].QuestionId" value="@question.Id" />
                    
                    @if (question.QuestionType == "multiple_choice")
                    {
                        <div class="space-y-2">
                            <div>
                                <input type="radio" name="Questions[@question.Id].Answer" value="A" id="q@(question.Id)_A" required />
                                <label for="q@(question.Id)_A">@question.ChoiceA</label>
                            </div>
                            <div>
                                <input type="radio" name="Questions[@question.Id].Answer" value="B" id="q@(question.Id)_B" />
                                <label for="q@(question.Id)_B">@question.ChoiceB</label>
                            </div>
                            <div>
                                <input type="radio" name="Questions[@question.Id].Answer" value="C" id="q@(question.Id)_C" />
                                <label for="q@(question.Id)_C">@question.ChoiceC</label>
                            </div>
                            <div>
                                <input type="radio" name="Questions[@question.Id].Answer" value="D" id="q@(question.Id)_D" />
                                <label for="q@(question.Id)_D">@question.ChoiceD</label>
                            </div>
                        </div>
                    }
                    else
                    {
                        <textarea name="Questions[@question.Id].Answer" 
                                  class="w-full p-2 border rounded-md"
                                  rows="3"
                                  required></textarea>
                    }
                </div>
            }

            <div class="flex justify-between items-center mt-6">
                <button type="submit" 
                        class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600">
                    Submit Exam
                </button>
                <a href="@Url.Action("Index")" class="text-gray-600 hover:text-gray-800">Cancel</a>
            </div>
        </form>
    </div>
</div>
