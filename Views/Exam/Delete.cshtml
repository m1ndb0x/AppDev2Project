@model AppDev2Project.Models.Exam
@{
    ViewData["Title"] = "Delete Exam";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
        <h2 class="text-2xl font-bold mb-6 text-red-600">Confirm Delete</h2>
        
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Are you sure you want to delete this exam?</h3>
            <div class="bg-gray-50 p-4 rounded-lg">
                <dl class="grid grid-cols-2 gap-4">
                    <dt class="text-gray-600">Title</dt>
                    <dd>@Model.Title</dd>
                    
                    <dt class="text-gray-600">Subject</dt>
                    <dd>@Model.Subject</dd>
                    
                    <dt class="text-gray-600">Total Score</dt>
                    <dd>@Model.TotalScoreWeight</dd>
                    
                    <dt class="text-gray-600">Questions</dt>
                    <dd>@(Model.Questions?.Count ?? 0)</dd>
                    
                    <dt class="text-gray-600">Created At</dt>
                    <dd>@Model.CreatedAt.ToShortDateString()</dd>
                </dl>
            </div>
        </div>

        <div class="flex items-center space-x-4">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" 
                        class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">
                    Delete
                </button>
            </form>
            <a href="@Url.Action("Index", "Exam")" 
               class="text-gray-600 hover:text-gray-800">
                Cancel
            </a>
        </div>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="mt-4 p-4 bg-red-100 text-red-700 rounded-lg">
                @ViewData["ErrorMessage"]
            </div>
        }
    </div>
</div>
